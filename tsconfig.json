{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@util/*": ["src/util/*"],
      "@decorators/*": ["src/decorators/*"],
      "@guards/*": ["src/guards/*"],
      "@enums/*": ["src/enums/*"],
      "@shared/*": ["src/shared/*"],
    }
  }
}
